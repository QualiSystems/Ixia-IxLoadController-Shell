<Driver Description="Shell to setup and run IxLoad traffic generator" MainClass="driver.IxLoadControllerDriver" Name="IxLoadControllerDriver" Version="1.1.0">
    <Layout>

         <Category Name="Hidden Commands">
            <Command Name="keep_alive" DisplayName="Keep Alive" Tags="" Description="" EnableCancellation="true"/>
        </Category>

		<Command Name="load_config" DisplayName="Load Configuration"
				 Description="Load configuration and reserve ports">
	    	<Parameters>
            	<Parameter Name="ixia_config_file_name" DisplayName="IxLoad config file name (rxf)" Type="String" Mandatory="True"
                           Description="Full path to IxLoad configuration file name" />
            </Parameters>
        </Command>
        <Command Name="start_test" DisplayName="Start Test" Description="">
            <Parameters>
            	<Parameter Name="blocking" DisplayName="Blocking" Type="Lookup" Mandatory="True" AllowedValues="True, False" DefaultValue="True"
                           Description="True - return after traffic finish to run, False - return immediately" />
            </Parameters>
        </Command>
        <Command Name="stop_test" DisplayName="Stop Test"
        		 Description="">
        </Command>
        <Command Name="get_statistics" DisplayName="Get Statistics" Description="Get all the ports statistics" >
         <Parameters>
            	<Parameter Name="view_name" DisplayName="View Name" Type="String" Mandatory="True"
                           Description="Name of csv file from the IxLoad results directory (c:\temp\IxLoad)" />
                <Parameter Name="output_type" DisplayName="Output Type" Type="Lookup" Mandatory="True" AllowedValues="CSV, JSON" DefaultValue="CSV"
                		   Description="CSV or JSON" />
            </Parameters>
        </Command>

    </Layout>
</Driver>
